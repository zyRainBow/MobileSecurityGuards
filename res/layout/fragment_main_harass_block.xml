<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#7FFF00"
        android:gravity="center" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7FFF00"
            android:drawableLeft="@drawable/app_small_icon"
            android:text="@string/app_name" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@drawable/bg_u10421010"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/layout_pwd_setting"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:animateLayoutChanges="true"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_black_pwd_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/pwd"
                android:text="@string/block_pwd_setting"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_sms_block"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:animateLayoutChanges="true"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_sms_block"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/sms"
                android:text="@string/sms_block" 
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tel_block"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/layout_pwd_setting"
            android:layout_toRightOf="@+id/layout_pwd_setting"
            android:layout_marginBottom="150dp"
            android:animateLayoutChanges="true"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_tel_block"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/tel"
                android:text="@string/tel_block" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_list"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/layout_pwd_setting"
            android:layout_toRightOf="@+id/layout_pwd_setting"
            android:animateLayoutChanges="true"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_black_white_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/white_blacklist"
                android:text="@string/black_white_list" />

        </LinearLayout>

    </RelativeLayout>
    

</RelativeLayout>
